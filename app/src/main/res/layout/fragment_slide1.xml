<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white">
    <TextView
        android:id="@+id/tv_player_one"
        android:layout_marginTop="20dp"
        android:layout_width="138dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Please Chose Your Avatar Player One"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/iv_icon_two"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_icon_one"
        android:layout_marginTop="20dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_player_one"
        app:layout_constraintEnd_toStartOf="@+id/iv_icon_two"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/img_batu"
        tools:layout_editor_absoluteY="90dp" />

    <ImageView
        android:id="@+id/iv_icon_two"
        android:layout_marginTop="20dp"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toBottomOf="@+id/tv_player_one"
        app:layout_constraintEnd_toEndOf="@id/iv_icon_three"
        app:layout_constraintStart_toStartOf="@+id/iv_icon_one"
        app:srcCompat="@drawable/img_gunting"
        tools:layout_editor_absoluteY="90dp" />

    <ImageView
        android:id="@+id/iv_icon_three"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_icon_two"
        app:layout_constraintTop_toBottomOf="@+id/tv_player_one"
        app:srcCompat="@drawable/img_kertas" />

    <ImageView
        android:id="@+id/iv_icon_four"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_input_name"
        app:layout_constraintEnd_toEndOf="@+id/iv_icon_two"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_icon_two"
        app:srcCompat="@drawable/img_lp3" />

    <ImageView
        android:id="@+id/iv_icon_five"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_input_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_icon_four"
        app:layout_constraintTop_toBottomOf="@+id/iv_icon_two"
        app:srcCompat="@drawable/img_lp1" />

    <TextView
        android:id="@+id/tv_input_name"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Input Your Name"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/edt_name_p1"
        app:layout_constraintTop_toBottomOf="@+id/iv_icon_five"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <EditText
        android:id="@+id/edt_name_p1"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Input Your Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_submit_p1"
        app:layout_constraintTop_toBottomOf="@+id/tv_input_name" />

    <Button
        android:id="@+id/btn_submit_p1"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_name_p1" />

</androidx.constraintlayout.widget.ConstraintLayout>